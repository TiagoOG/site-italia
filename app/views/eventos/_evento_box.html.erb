<div class="col-md-4 column">
    <div class="list-group">
      <!--<a href="#" class="list-group-item active"><%= evento_box.nome %></a>-->
      <%= link_to evento_box.nome, evento_box, class: "list-group-item active " %>
      <div class="list-group-item list-group-item-success">
        <%= evento_box.data_evento %>
      </div>
      <% if evento_box.subtitulo %>
          <div class="list-group-item">
            <h4 class="list-group-item-heading">
              <%= evento_box.subtitulo %>
            </h4>
          </div>
      <% end %>
      <div class="list-group-item">
        <span class="badge"><%= evento_box.galerias.size || 0 %></span>
        <%= link_to "Fotos", evento_box %>
      </div>
    </div>
</div>