<h1>Listing galerias</h1>

<%= link_to helper_app_btn_title_new, new_galeria_path, class: helper_app_btn_icon_new %>
<br/>
<table class="table table-hover table-condensed">
  <thead>
      <tr>
        <th>Titulo</th>
        <th>Evento</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
  </thead>
  <tbody>
      <% @galerias.each do |galeria| %>
          <tr>
            <td><%= galeria.titulo %></td>
            <td><%= helper_evento_name(galeria.evento_id) %></td>
            <td><%= link_to '', galeria, class: helper_app_btn_icon_show_row, title: helper_app_btn_title_show %></td>
            <td><%= link_to '', edit_galeria_path(galeria), class: helper_app_btn_icon_edit_row,
                            title: helper_app_btn_title_edit %></td>
            <td><%= link_to '', galeria, method: :delete, data: { confirm: 'Are you sure?' },
                            class: helper_app_btn_icon_destroy, title: helper_app_btn_title_destroy %></td>
          </tr>
      <% end %>
  </tbody>
</table>


