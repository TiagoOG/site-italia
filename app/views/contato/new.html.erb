<h2>Formul√°rio de contato</h2>
<br>
<%= form_for @message, :class => 'row', :url => contato_path do |form| %>
    <div class="col-12 col-sm-12 col-lg-12">
      <div class="form-group">
        <%= form.label :name, 'Nome', :class => 'form-control' %>
        <%= form.text_field :name, :class => 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :email, 'Email', :class => 'form-control' %>
        <%= form.text_field :email, :class => 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :subject, 'Assunto', :class => 'form-control' %>
        <%= form.text_field :subject, :class => 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :body, 'Mensagem', :class => 'form-control' %>
        <%= form.text_area :body, :class => 'form-control' %>
      </div>
    </div>

    <fieldset class="actions">
      <%= form.submit "Enviar", :class => 'btn btn-primary pull-right' %>
    </fieldset>
<% end %>